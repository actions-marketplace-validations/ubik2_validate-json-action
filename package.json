    "glob": "^8.0.3",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@vercel/ncc": "^0.34.0",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "jest-circus": "^29.2.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
